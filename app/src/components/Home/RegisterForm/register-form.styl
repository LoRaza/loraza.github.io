@require "app/styles/charte"

#register-form
  height: 50vh
  width: 50vw
  border: 3px solid $color-primary
  border-radius: 1em
  position: fixed
  top: 50% - 25vh
  left: 50% - 25vw
  padding: 2em
  text-align: left
  background-color: $color-secondary

.align-right
  text-align: right
  margin-bottom: 1em

.close
  font-size: 2em
  color: $color-primary
  cursor: pointer

.form-title
  font-size: 2em
  margin-bottom: 1em
  text-align: center
  color: $color-primary

input
  display: block;
  font-size: 1.2em
  width: 100%
  border: none
  border-bottom: 2px solid $color-primary
  margin: 0.5em 0 1em
  padding:0 0.5em
  background-color: $color-secondary
  color:$text

label
  color: $color-primary

button
  display: block
  font-size: 1.2em
  text-align: center
  margin: 3em auto
  padding: 0.5em
  background-color: $color-primary
  color: $text
  border: none
  border-radius: 1em

#user-identity
  text-align: left
  display: flex
  justify-content: space-between
