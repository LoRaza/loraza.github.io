@require "app/styles/charte"

#cv-user
  position: relative
  left: 50%
  overflow: auto

#cv-builder-form
  width: 33%
  height: 100vh
  position: absolute
  z-index: 1000
  background-color: #E0E2DB
  left: 0
  top: 0
  padding: 3em 5em
  box-shadow: 3px 0 30px 2px #444
  display: flex
  flex-direction: column
  justify-content: space-around
  align-items: flex-end

.button-add
  margin: 2em
  display: block
  width: 250px
  height: 3em
  border: 3px solid $color-primary
  background-color: #E0E2DB
  color: $color-primary
  font-size: 1.1em
  line-height: 0
  border-radius: 50px

.button-add:hover
    background-color: $color-primary
    color: $text

.button-add:after
  content: '+'
  top: .14em
  position: relative
  margin-left: .5em
  font-size: 2em

.text-input
  background-color: #eee
  border: none
  height: 3em
  padding: .5em 1em
  font-weight: 400
  color: $color-secondary

#panel-toggler
  width: 80px
  height: 80px
  border-radius: 50%
  position: relative
  z-index: 6000
  // top: calc(50% - 40px)
  left: 25%
  background-color: $color-primary
  color: $text
  font-size: 3em
  line-height: 80px
  padding-right: 8px

.toggle-panel
  transform: translateX(-30%)
  box-shadow: 0 0 0 0 !important
  transition: 700ms

.toggle-panel:before
  content: ''
  position: absolute
  left: 0
  z-index: 5000
  width: 100%
  height: 100%
  background-color: rgba($color-secondary, .85)
  animation-name: fade
  animation-duration: 700ms



@keyframes fade {
  from {
    background-color: rgba($color-secondary, .5)
  }
  to {
    background-color: rgba($color-secondary, .85)
  }
}
