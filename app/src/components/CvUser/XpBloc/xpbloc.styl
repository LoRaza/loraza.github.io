@require "app/styles/charte"

.cv-bloc-added
  width: 250px
  height: 110px
  box-shadow:inset 0px 0px 0px 3px $color-secondary
  padding: 1em
  background-color: #fff
  color: $color-secondary
  box-sizing: border-box

.cv-bloc-entitled
  font-size: 1em
  margin-bottom: .5em
  color: $color-primary

.cv-bloc-year
  font-family: 'Fira Sans', sans-serif
  font-weight: 200
  font-style: italic
  margin-bottom: .5em

.cv-bloc-abstract
  padding: 1em
  font-family: 'Fira Sans', sans-serif
  font-weight: 300
  display: none
  color: $text
  text-align: justify

.abstract-toggle
  font-size: 1.2em
  color: $color-primary

.cv-bloc-abstract--show
  display: block
  width: 500px
  box-shadow:inset 0px 0px 0px 3px $color-secondary
  background-color $color-primary


.bloc-wrapper
  min-width: 250px
  max-width: 750px
  display: flex
  flex-direction: row

.hide-delete-item
  display: none

.delete-item
  text-align: right
  font-size: .8em
  color: #D4D2D5
  top: 0
  left: 0px

.delete-item:hover
    color: $color-secondary
