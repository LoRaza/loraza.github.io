@require "app/styles/charte"

body
  font-family: 'Montserrat', sans-serif
  font-weight: 400

#app
  width: 100vw
  height: 100vh
  padding: 2em 3em
  text-align: center
  font-weight: 700
  border: 20px solid $color-primary
  background-color $color-secondary


.bars
  position: absolute
  width: 100vw
  height: 100vh
  top: 0
  left: 0
  z-index: 0

.bar
  width: 33%
  height: 100vh
  border-right: 1px solid $color-primary
  position: absolute
  top: 0

.bar-1
  left: 0

.bar-2
  left: 33%
